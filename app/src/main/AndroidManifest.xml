<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.faridcodeur.letschat">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/chat"
        android:label="@string/app_name"
        android:roundIcon="@drawable/chat"
        android:supportsRtl="true"
        android:theme="@style/Theme.Letschat">
        <activity
            android:name=".activity.FabActionActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SondageBoxActivity"
            android:exported="true" />
        <activity
            android:name=".activity.MediaViewActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:label="@string/title_activity_media_view"
            android:theme="@style/Theme.Letschat.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ContactDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_contact_details"
            android:theme="@style/Theme.Letschat.NoActionBar" />
        <activity
            android:name=".activity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ChatScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.Letschat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.AuthActivity"
            android:exported="true"
            android:theme="@style/Theme.Letschat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ConfigProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.Letschat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>