<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:text="Entrez votre numéro de téléphone"
            android:layout_marginTop="340dp"
            android:layout_marginBottom="28dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="83dp"
            />

        <EditText
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:text="+229     __ __ __ __ __ __    "
            android:textSize="18dp"
            android:background="@drawable/a"
            android:paddingLeft="@dimen/_text_smale_smale"
            android:paddingRight="100dp"
            android:paddingTop="@dimen/_text_smale_smale"
            android:layout_marginBottom="@dimen/_text_big"
            android:layout_marginLeft="@dimen/_main_padding_horizontal"
            android:layout_marginRight="@dimen/_main_padding_horizontal"/>

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="112dp"
            android:layout_marginRight="112dp"
            android:backgroundTint="@color/_primary"
            android:text="Envoyez le code"
            android:textColor="@color/white"

            />

        <TextView
            android:layout_width="221dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="80dp"
            android:text="S'inscrire sur Let's chat voudra dire que vous avez lu et accepté les politiques de confidentialité "
            android:textColor="@color/_primary"
            android:textAlignment="center"
            android:textSize="@dimen/_text_smale_smale"
            />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>