<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SondageBoxActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="14dp"
            android:background="@drawable/sondage_message_style"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="14dp">

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@drawable/left_strock" />

            <ListView
                android:id="@+id/sondageBox"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="8dp">

            </ListView>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/soumetre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="602dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="soumetre" />

</androidx.constraintlayout.widget.ConstraintLayout>