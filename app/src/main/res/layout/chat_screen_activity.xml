<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/chat_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/Theme.AppCompat.Light"
            >
            <RelativeLayout
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:id="@+id/contact_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/chat_screen_return_button"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/_transparent_color"
                        android:contentDescription="Button to return to back"
                        android:src="@drawable/ic_baseline_arrow_back_24" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/contact_profile_pic"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:padding="0dp"
                        android:src="@drawable/deku" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/toolbar_view"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/contact_view"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/contact_name"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ariel" />
                    <TextView
                        android:id="@+id/online_status"
                        android:text="En ligne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:visibility="gone"
        android:padding="20dp"
        android:orientation="vertical"
        android:id="@+id/new_chat"
        android:background="@color/_primary"
        app:layout_constraintTop_toBottomOf="@id/chat_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="40dp"
            app:cardPreventCornerOverlap="false"
            android:layout_width="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="8dp"
                android:src="@drawable/ic_arrow_to_bottom"
                android:layout_width="80dp"
                android:layout_height="80dp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:text="Bienvenue dans la boite de discussion"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Votre discussion dÃ©bute ici avec Ariel envoyez lui un message"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@id/chat_appbar"
        tools:listitem="@layout/message_in"
        app:stackFromEnd="true"
        android:paddingBottom="10dp"

        />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/uploadBar"
        android:visibility="gone"
        app:indicatorColor="@color/_primary"
        app:layout_constraintBottom_toTopOf="@+id/downloadBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/downloadBar"
        android:visibility="gone"
        app:indicatorColor="@color/_status_red"
        app:layout_constraintBottom_toTopOf="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingTop="10dp"
        android:background="#e0e0e0"
        app:layout_constraintBottom_toTopOf="@+id/layout_chat_chatbox" />


    <RelativeLayout
        android:id="@+id/layout_chat_chatbox"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_margin="4dp"
            android:layout_toStartOf="@id/media_buttons"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/edit_chat_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_toStartOf="@+id/button_message_send"
                android:background="@android:color/transparent"
                android:hint="Entrez un message"
                android:inputType="textMultiLine"
                android:maxLines="6"
                tools:ignore="Autofill" />

            <ImageButton
                android:id="@+id/button_message_send"
                android:layout_width="@dimen/_main_padding_horizontal"
                android:layout_height="@dimen/_main_padding_horizontal"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/border_button"
                android:backgroundTint="@color/_field_color"
                android:src="@drawable/ic_send" />

        </RelativeLayout>
        <LinearLayout
            android:paddingHorizontal="4dp"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:id="@+id/media_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true">
            <ImageButton
                android:id="@+id/button_audio_send"
                android:layout_width="@dimen/_main_padding_horizontal"
                android:layout_height="@dimen/_main_padding_horizontal"
                android:background="@drawable/border_button"
                android:src="@drawable/ic_vocal"
                />
            <ImageButton
                android:id="@+id/button_gallery_send"
                android:layout_width="@dimen/_main_padding_horizontal"
                android:layout_height="@dimen/_main_padding_horizontal"
                android:background="@drawable/border_button"
                android:src="@drawable/ic_image"
                />
            <ImageButton
                android:id="@+id/button_file_send"
                android:layout_width="@dimen/_main_padding_horizontal"
                android:layout_height="@dimen/_main_padding_horizontal"
                android:background="@drawable/border_button"
                android:src="@drawable/ic_file"
                />

        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>