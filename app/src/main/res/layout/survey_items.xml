<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_home_padding_horizontal"
    android:backgroundTint="@color/_survey_back_color"
    app:cardCornerRadius="@dimen/_survey_corner_rounded"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/_survey_corner_padding"
       >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_chart_alt"
                android:scaleType="centerCrop"
                android:contentDescription="content_description_media"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            >

            <TextView
                android:id="@+id/survey_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La législation de l'avortement..."
                android:textStyle="bold"
                android:textSize="@dimen/_text_medium"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/_text_color_primary"
                />
            <TextView
                android:id="@+id/survey_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="D'une grossesse mon désirée..."
                android:textStyle="bold"
                android:textSize="@dimen/_text_smale"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/_text_color_secondary"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center|top"
            android:paddingEnd="8dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/survey_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:textSize="@dimen/_text_smale_smale"
                android:text="il y a 3min"
                android:textColor="@color/_text_color_secondary"
                />

            <TextView
                android:id="@+id/survey_state"
                android:layout_width="@dimen/_new_corner_width"
                android:layout_height="@dimen/_new_corner_height"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="10dp"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner"
                android:text="@string/_new"
                android:layout_marginTop="8dp"
                />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>