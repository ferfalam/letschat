<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reponse Ã  choix unique"
        android:textColor="@color/_text_color_primary"
        android:textStyle="bold"
        android:textSize="@dimen/_text_medium"
        android:paddingBottom="@dimen/_text_smale"
        android:paddingTop="@dimen/_text_smale"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Question"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_shape"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reponses possibles"
        android:textColor="@color/_text_color_secondary"
        android:textStyle="bold"
        android:textSize="@dimen/_text_medium"
        android:paddingBottom="@dimen/_text_smale"
        android:paddingTop="@dimen/_text_smale"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:checkable="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"
            android:ellipsize="end"
            android:text="Oui"/>

        <Button
            android:id="@+id/deleteRadio"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly.Red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:layout_weight="0"
            android:ellipsize="end"
            app:cornerRadius="50dp"
            app:icon="@drawable/ic_forget"
            app:strokeColor="@color/white"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RadioGroup>

        <RadioButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:layout_weight="0"
            android:ellipsize="end"
            android:enabled="false"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_weight="1"
            android:ellipsize="end"
            android:hint="Reponse"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/new_radio_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shape"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/addRadio"
            style="@style/Widget.App.Button.OutlinedButton.IconOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_text_smale"
            android:layout_gravity="center"
            app:cornerRadius="50dp"
            app:icon="@drawable/ic_add"
            app:strokeColor="@color/white"/>

    </LinearLayout>

    <Button
        android:id="@+id/delView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textStyle="bold"
        android:backgroundTint="@color/_icon_secondary_color"
        android:text="Retirer"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/_text_smale"
        android:background="?android:attr/listDivider" />

</LinearLayout>